{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": [
      "es2022",
      "dom"
    ],
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*",
    "./scripts/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./lib",
    "./coverage"
  ]
}