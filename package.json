{
  "name": "node-fantrax-stats-parser",
  "version": "1.0.0",
  "description": "Fantrax stats parser",
  "main": "./lib/index.js",
  "repository": "git@github.com:maestor/node-fantrax-stats-parser.git",
  "author": "Kalle Haavisto <maestori@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "dev": "npm run build && concurrently \"tsc --watch\" \"nodemon --watch lib --ext js --exec node lib/server.js\"",
    "dev-start": "npm run build && node lib/server.js",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "playwright:login": "tsx src/playwright/login.ts",
    "playwright:sync:leagues": "tsx src/playwright/sync-leagues.ts",
    "playwright:sync:playoffs": "tsx src/playwright/sync-playoffs.ts",
    "playwright:sync:regular": "tsx src/playwright/sync-regular.ts",
    "playwright:import:regular": "tsx src/playwright/import-league-regular.ts",
    "playwright:import:playoffs": "tsx src/playwright/import-league-playoffs.ts",
    "r2:upload": "tsx scripts/upload-to-r2.ts",
    "r2:upload:current": "tsx scripts/upload-to-r2.ts --current-only",
    "r2:upload:dry": "tsx scripts/upload-to-r2.ts --dry-run",
    "r2:upload:force": "tsx scripts/upload-to-r2.ts --force",
    "r2:download": "tsx scripts/download-from-r2.ts",
    "r2:download:dry": "tsx scripts/download-from-r2.ts --dry-run",
    "r2:download:force": "tsx scripts/download-from-r2.ts --force",
    "db:migrate": "tsx scripts/db-migrate.ts",
    "db:import:stats": "tsx scripts/import-stats-to-db.ts",
    "db:import:stats:current": "tsx scripts/import-stats-to-db.ts --current-only",
    "db:import:playoff-results": "tsx scripts/db-import-playoff-results.ts",
    "db:import:regular-results": "tsx scripts/db-import-regular-results.ts",
    "parseAndUploadCsv": "set -a && source .env && set +a && ./scripts/import-temp-csv.sh",
    "start": "npm run build && node lib/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "verify": "npm run lint:check && npm run typecheck && npm run build && npm run test:coverage"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "js-yaml": "^4.1.1",
    "micro": "^10.0.1",
    "micro-cors": "^0.1.1",
    "microrouter": "^3.1.3",
    "playwright": "^1.58.2"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.997.0",
    "@eslint/js": "^9.37.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/microrouter": "^3.1.6",
    "@types/node": "^24.10.13",
    "concurrently": "^9.2.1",
    "csvtojson": "^2.0.14",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.3",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.14",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}