# Cloudflare R2 Storage Configuration
# Copy this file to .env and fill in your values

# Set to true to use R2 storage, false to use local filesystem
# For local development: set to false and use "npm run r2:download" to get CSV files
USE_R2_STORAGE=false

# R2 Credentials (required for R2 scripts: upload/download)
# Get these from Cloudflare R2 dashboard
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=ffhl-stats-csv

# API Key Authentication (optional)
# Uncomment to require API keys for data endpoints
# API_KEY=your_api_key_here
# API_KEYS=key1,key2,key3
# REQUIRE_API_KEY=true
# API_KEY_HEADER=x-api-key
